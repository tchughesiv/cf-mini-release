cd /root/cf_nise_installer/cf-release
./scripts/update
#? rm -rf .final_builds .blobs blobs config/blobs.yml /tmp/mini-blobs
grep -lr "DNS: 53" ./src/consul-release/ | xargs sed -i 's/DNS: 53,/DNS: 8600,/g'

echo "---
final_name: cf
min_cli_version: 1.5.0.pre.1001
blobstore:
  provider: local
  options:
    blobstore_path: /tmp/mini-blobs" > config/final.yml

echo "---
blobstore_secret: 'does-not-matter'
blobstore:
  local:
    blobstore_path: /tmp/mini-blobs" > config/private.yml

#? source ~/.profile
rbenv install 2.3.0
echo "2.3.0" > .ruby-version
rbenv global 2.3.0
gem install bundler --no-ri --no-rdoc
bundle install --deployment
echo yes | ./vendor/bundle/ruby/2.3.0/bin/bosh create release cf --final --force

NISE_IP_ADDRESS=${NISE_IP_ADDRESS:-`ip addr | grep 'inet .*global' | cut -f 6 -d ' ' | cut -f1 -d '/' | head -n 1`}
sudo env PATH=$PATH bundle exec /root/cf_nise_installer/nise_bosh/bin/nise-bosh --keep-monit-files -p -y /root/cf_nise_installer/cf-release confab -n ${NISE_IP_ADDRESS}
